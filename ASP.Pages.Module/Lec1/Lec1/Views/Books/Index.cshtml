@model List<BookViewModel>
<h1>Books Page</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               
                <td>
                    <a class="text-dark text-decoration-none" href="/books/details/@item.Id">
                      @item.Title
                    </a>
                </td>
                <td>@item.Description</td>

            </tr>
        }
    </tbody>
</table>